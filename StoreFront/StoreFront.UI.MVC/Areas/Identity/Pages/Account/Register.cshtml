@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<section class="banner-area organic-breadcrumb">
    <div class="container">
        <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
            <div class="col-first">
                <h1>Register An Account</h1>
                <nav class="d-flex align-items-center">
                    @*<a href="index.html">Home<span class="lnr lnr-arrow-right"></span></a>
                    <a href="category.html">Contact</a>*@
                </nav>
            </div>
        </div>
    </div>
</section>

<!--================Login Box Area =================-->
<section class="login_box_area section_gap">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="login_box_img">
                    <img class="img-fluid" src="~/img/login.jpg" alt="Loging in on a computer">
                    <div class="hover">
                        <h4>Already Have An Account?</h4>
                        <p>If this isn't' your first time and you already have an account then click below to go to the login page</p>
                        <a class="primary-btn" href="~/Identity/Account/Register">Go To Login Page</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="login_form_inner" style="padding-top: 50px;">
                    <h3>Register/Create A New Account</h3>
                    <form asp-route-returnUrl="@Model.ReturnUrl" class="row login_form" method="post" id="registerForm">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="col-md-12 form-group">
                            <input asp-for="Input.FirstName" class="form-control" autocomplete="firstname" id="name" placeholder="First Name" aria-required="true">
                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <input asp-for="Input.LastName" class="form-control" autocomplete="lastname" placeholder="Last Name" aria-required="true">
                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" id="email" placeholder="Email" aria-required="true">
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <input asp-for="Input.Address" class="form-control" autocomplete="address" id="address" placeholder="Address" aria-required="true">
                            <span asp-validation-for="Input.Address" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <input asp-for="Input.City" class="form-control" autocomplete="city" id="city" placeholder="City" aria-required="true">
                            <span asp-validation-for="Input.City" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <input asp-for="Input.State" class="form-control" autocomplete="state" id="state" placeholder="State" aria-required="true">
                            <span asp-validation-for="Input.State" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <input asp-for="Input.Zip" class="form-control" autocomplete="zip" id="zip" placeholder="Zip" aria-required="true">
                            <span asp-validation-for="Input.Zip" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <input asp-for="Input.Country" class="form-control" autocomplete="country" id="country" placeholder="Country" aria-required="true">
                            <span asp-validation-for="Input.Country" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <input asp-for="Input.Phone" class="form-control" autocomplete="phone" id="phone" placeholder="Phone" aria-required="true">
                            <span asp-validation-for="Input.Phone" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <input asp-for="Input.Password" class="form-control" placeholder="Password" autocomplete="new-password" aria-required="true">
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirm Password" autocomplete="new-password" aria-required="true">
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            @* <button type="submit" value="submit" class="primary-btn">Log In</button> *@
                            <button id="registerSubmit" type="submit" value="submit" class="w-100 primary-btn">Register New Account</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!--================End Login Box Area =================-->


